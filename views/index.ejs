<%- include('header'); %>
<div class="container">
    <div class="row">
        <% if (error === null) { %>
        <div id="weather">
            <div id="description"><%= description%></div>
            <h1 id="temp"><%= temp %>&deg;C</h1>
            <div id="location"><%= city %></div>
        </div>
        <% } else { %>
            <div id="weather">
                <p><%= error %></p>
                <a href="/">Try again</a>
            </div>
        <% } %>
    </div>
    <hr>
    <div class="row">
        <form id="change-city" method="post" action="/">
            <label for="city-name">City</label>
            <input type="text" name="cityname" id="city-name">
            <br/>
            <input type="submit" value="Save changes">
        </form>
    </div>
</div>
<%- include('footer'); %>